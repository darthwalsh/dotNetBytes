{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/CloudFunction/CloudFunction.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/CloudFunction/CloudFunction.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/CloudFunction/CloudFunction.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/CloudFunction/"
      }
    },
    {
      "label": "cloudPublish",
      "command": "gcloud",
      "args": [
        "--project",
        "dotnetbytes",
        "functions",
        "deploy",
        "parse",
        "--entry-point",
        "CloudFunction.Function",
        "--source",
        "${workspaceFolder}",
        "--runtime",
        "dotnet3",
        "--trigger-http",
        "--allow-unauthenticated",
        "--set-build-env-vars=GOOGLE_BUILDABLE=CloudFunction"
      ],
      "problemMatcher": []
    }
  ]
}
